<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >

<generatorConfiguration>

    <properties resource="datasource.properties"/>

    <!-- 本地数据库驱动程序jar包的全路径 -->
    <classPathEntry location="/"/>

    <context id="snowman" targetRuntime="Mybatis3" defaultModelType="flat">

        <plugin type="cc.kevinlu.snow.server.config.mybatis.LombokPlugin"/>
        <plugin type="cc.kevinlu.snow.server.config.mybatis.MybatisOverIsMergeablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>

        <commentGenerator type="cc.kevinlu.snow.server.config.mybatis.MyCommentGenerator">
            <property name="javaFileEncoding" value="UTF-8"/>
            <property name="addRemarkComments" value="true"/>
            <property name="suppressAllComments" value="false"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!-- 数据库相关配置 -->
        <jdbcConnection driverClass="${datasource.driver-class-name}"
                        connectionURL="${datasource.url}" userId="${datasource.username}"
                        password="${datasource.password}"/>

        <javaTypeResolver type="cc.kevinlu.snow.server.config.mybatis.JavaTypeResolverImpl"/>

        <!-- 实体类生成的位置 -->
        <javaModelGenerator targetPackage="cc.kevinlu.snow.server.data.model"
                            targetProject="${datasource.dir}/src/main/java"/>
        <sqlMapGenerator targetPackage="mybatis.mapper" targetProject="${datasource.dir}/src/main/resources"/>

        <javaClientGenerator type="XMLMAPPER" targetPackage="cc.kevinlu.snow.server.data.mapper"
                             targetProject="${datasource.dir}/src/main/java"/>

        <table tableName="sm_digit" domainObjectName="DigitDO"
               mapperName="DigitMapper"
               enableCountByExample="true"
               enableDeleteByExample="true" enableInsert="true" enableSelectByExample="true"
               enableUpdateByExample="true"
               selectByExampleQueryId="true" enableSelectByPrimaryKey="true">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        <table tableName="sm_uuid" domainObjectName="UuidDO"
               mapperName="UuidMapper"
               enableCountByExample="true"
               enableDeleteByExample="true" enableInsert="true" enableSelectByExample="true"
               enableUpdateByExample="true"
               selectByExampleQueryId="true" enableSelectByPrimaryKey="true">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        <table tableName="sm_snowflake" domainObjectName="SnowflakeDO"
               mapperName="SnowflakeMapper"
               enableCountByExample="true"
               enableDeleteByExample="true" enableInsert="true" enableSelectByExample="true"
               enableUpdateByExample="true"
               selectByExampleQueryId="true" enableSelectByPrimaryKey="true">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
